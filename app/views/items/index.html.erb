<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Objetivo</th>
      <th>Actividad</th>
      <th>Responsable</th>
      <th>Unidad</th>
      <th>Programa</th>
      <th>Pfecha</th>
      <th>Admin user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.objetivo %></td>
        <td><%= item.actividad %></td>
        <td><%= item.responsable %></td>
        <td><%= item.unidad %></td>
        <td><%= item.programa %></td>
        <td><%= item.pfecha %></td>
        <td><%= item.admin_user %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

